<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leobasco.labexerno2.Main2Activity">

    <Button
        android:id="@+id/loadShared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadpref"
        android:text="Load Shared Preferences"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/loadInternal"
        android:layout_alignLeft="@+id/loadInternal"
        android:layout_alignStart="@+id/loadInternal" />

    <Button
        android:id="@+id/loadInternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadstore"
        android:text="Load Internal Storage"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/clearBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:onClick="cleardisplay"
        android:text="Clear"
        android:layout_alignBaseline="@+id/backBtn"
        android:layout_alignBottom="@+id/backBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:onClick="backact"
        android:text="Back"
        android:layout_marginBottom="173dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvdisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clearBtn"
        android:layout_alignStart="@+id/clearBtn"
        android:layout_below="@+id/clearBtn"
        android:layout_marginTop="45dp"
        android:textSize="18sp" />

</RelativeLayout>